                                    CoordinateSystemLabelZ="{TemplateBinding CoordinateSystemLabelZ}"
                                    EnableMover="{TemplateBinding IsCoordinateSystemMoverEnabled}"
                                    IsRendering="{TemplateBinding ShowCoordinateSystem}"
